{
  // VS Code language configuration for Org Mode
  "comments": {
    "lineComment": "#"
  },
  "brackets": [
    ["[", "]"],
    ["{", "}"]
  ],
  "autoClosingPairs": [
    { "open": "[", "close": "]" },
    { "open": "{", "close": "}" },
    { "open": "'", "close": "'", "notIn": ["string", "comment"] },
    { "open": "\"", "close": "\"", "notIn": ["string"] }
  ],
  "surroundingPairs": [
    ["[", "]"],
    ["{", "}"],
    ["/", "/"],
    ["*", "*"],
    ["_", "_"],
    ["~", "~"],
    ["+", "+"],
    ["=", "="]
  ]
}
