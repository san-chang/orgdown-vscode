{
  // VS Code language configuration for Org Mode
  "comments": {
    "lineComment": "#"
  },
  "brackets": [
    ["[", "]"],
    ["{", "}"]
  ],
  "colorizedBracketPairs": [],
  "autoClosingPairs": [
    { "open": "[", "close": "]" },
    { "open": "{", "close": "}" },
    { "open": "'", "close": "'", "notIn": ["string", "comment"] },
    { "open": "\"", "close": "\"", "notIn": ["string"] }
  ],
  "surroundingPairs": [
    ["[", "]"],
    ["{", "}"],
    ["/", "/"],
    ["*", "*"],
    ["_", "_"],
    ["~", "~"],
    ["+", "+"],
    ["=", "="]
  ],
  "folding": {
    "offSide": true,
    "markers": {
      "start": "^\\s*#\\+(?i:begin_).*",
      "end": "^\\s*#\\+(?i:end_)"
    }
  }
}
